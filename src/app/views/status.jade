doctype html(lang="de")

html
  head
    title Status
    //- script(src="/js/jquery-1.11.1.js")

    link(rel='stylesheet', type="text/css", href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', type="text/css", href='/bootstrap/css/bootstrap-responsive.min.css')
    link(rel='stylesheet', type="text/css", href='/stylesheets/style.css')
    script(src='/bootstrap/js/bootstrap.min.js')

    script(type='text/javascript').
      setTimeout(function(){
         window.location.reload(1);
      }, 9000);

  body
    div#title_image
      span#title_string OnAir2

    div#im-centered
      div(class="row")
        each room, index in allstate.room
          div(class="span5")#innerbox
            h3 #{index}

            each person, i in room
              div(class="row")
                div(class="span2")
                  if (person.line == "ON AIR")
                    span( class='onair' ) ON AIR
                  else
                    span( class='offair' ) ON AIR
                div(class="span2")
                    span#person_nummer #{person.name} [-#{person.number}]

  if ( nexttrain > 18 )
    div#no_sbahn Der nächste Zug von Unterschleißheim fährt erst in #{nexttrain} Min.
  else
    div#sbahn Der nächste Zug von Unterschleißheim fährt in #{nexttrain} Min.

